<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_header_list_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/imageView_header_list_icon_indicator_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_dot_pressed"/>
        <ImageView
            android:id="@+id/imageView_header_list_icon_indicator_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_dot"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/imageView_header_list_icon_indicator_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_dot"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>