<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.litte.publiccomment.activity.ChooseCityActivity">

    <include
        layout="@layout/header_city_title_layout"/>
   <include
       layout="@layout/city_search_layout"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_show_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.litte.publiccomment.view.MyLetterView
            android:id="@+id/myLetterView"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"/>
    </FrameLayout>

</LinearLayout>
